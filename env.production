# Production Environment Configuration
# Copy this to .env.production and customize for your production environment

# Application Configuration
app_name=Document Intelligence Platform
app_version=1.0.0
debug=false
log_level=INFO

# Database Configuration (Production PostgreSQL)
database_url=postgresql://di_user:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/di_platform
redis_url=redis://${REDIS_HOST}:6379/0

# OpenAI Configuration
openai_api_key=${OPENAI_API_KEY}
openai_model=gpt-4-turbo-preview
embedding_model=text-embedding-3-large

# Security Configuration
secret_key=${SECRET_KEY}
jwt_secret=${JWT_SECRET}
cors_origins=${CORS_ORIGINS}

# AWS Configuration (for production deployment)
aws_access_key_id=${AWS_ACCESS_KEY_ID}
aws_secret_access_key=${AWS_SECRET_ACCESS_KEY}
aws_region=us-east-1
s3_bucket_name=${S3_BUCKET_NAME}

# Monitoring Configuration
prometheus_port=9090
grafana_port=3000
sentry_dsn=${SENTRY_DSN}

# Vector Store Configuration
faiss_index_path=/app/data/faiss_index
chunk_size=1000
chunk_overlap=200
max_tokens=4000

# Cache Configuration
cache_ttl=3600
max_cache_size=10000

# Rate Limiting
rate_limit_per_minute=60
rate_limit_per_hour=1000

# File Upload Limits
max_file_size=50MB
allowed_file_types=pdf,docx,txt,md,html

# Email Configuration (for notifications)
smtp_host=${SMTP_HOST}
smtp_port=${SMTP_PORT}
smtp_username=${SMTP_USERNAME}
smtp_password=${SMTP_PASSWORD}
from_email=${FROM_EMAIL}
